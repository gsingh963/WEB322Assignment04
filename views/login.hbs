<main>
	<div class="form-wrapper">
        <form method="POST">
            <h2 class="title">Login</h2>

            <div class="input-group">
                <label for="email">Email {{#if errors.email}}<span>{{errors.email}}</span>{{/if}}</label>
                <input type="email" name="email" id="email" class="textbox"/>
            </div>

            <div class="input-group">
                <label for="password">Password {{#if errors.password}}<span>{{errors.password}}</span>{{/if}}</label>
                <input type="password" name="password" id="password" class="textbox"/>
            </div>

            <div class="submission">
                {{#if formStatus}}<p style="text-align:center;color:red;margin-top:-25px;">{{formStatus}}</p>{{/if}}
                <button type="submit">Log In</button>
            </div>
        </form>
    </div>
</main>